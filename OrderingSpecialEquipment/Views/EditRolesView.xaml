<UserControl x:Class="OrderingSpecialEquipment.Views.EditRolesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2006"
             xmlns:converters="clr-namespace:OrderingSpecialEquipment.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <converters:BoolToWidthConverter x:Key="BoolToWidth"/>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PanelBackground}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                Padding="10" 
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Управление ролями" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource TextForeground}"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Обновить" 
                            Command="{Binding LoadRolesCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Добавить" 
                            Command="{Binding AddRoleCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Редактировать" 
                            Command="{Binding EditRoleCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Удалить" 
                            Command="{Binding DeleteRoleCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Сохранить" 
                            Command="{Binding SaveRoleCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Отмена" 
                            Command="{Binding CancelEditCommand}"
                            Style="{StaticResource ThemedButtonStyle}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBox Text="{Binding SearchText}" 
                             Width="200"
                             Style="{StaticResource ThemedTextBoxStyle}"
                             Margin="0,0,5,0"/>
                    <Button Content="Поиск" 
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource ThemedButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Таблица ролей -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10">
                <DataGrid ItemsSource="{Binding Roles}"
                          SelectedItem="{Binding SelectedRole}"
                          Style="{StaticResource ThemedDataGridStyle}"
                          RowStyle="{StaticResource ThemedDataGridRowStyle}"
                          CellStyle="{StaticResource ThemedDataGridCellStyle}"
                          ColumnHeaderStyle="{StaticResource ThemedDataGridColumnHeaderStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                        <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="150"/>
                        <DataGridTextColumn Header="Код" Binding="{Binding Code}" Width="100"/>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="200"/>
                        <DataGridTextColumn Header="Таблицы" Width="400">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridCheckBoxColumn Header="Экспорт" Binding="{Binding SPEC_ExportData}" Width="80"/>
                        <DataGridCheckBoxColumn Header="Отчеты" Binding="{Binding SPEC_ViewReports}" Width="80"/>
                        <DataGridCheckBoxColumn Header="Все отделы" Binding="{Binding SPEC_ManageAllDepartments}" Width="80"/>
                        <DataGridCheckBoxColumn Header="Управление" Binding="{Binding SPEC_ManageUsers}" Width="80"/>
                        <DataGridCheckBoxColumn Header="Системный" Binding="{Binding SPEC_SystemAdmin}" Width="80"/>
                        <DataGridCheckBoxColumn Header="Активна" Binding="{Binding IsActive}" Width="80"/>
                        <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedAt}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Панель редактирования -->
            <Border Grid.Column="1" 
                    Width="400"
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Редактирование роли" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource TextForeground}"
                                   Margin="0,0,0,10"/>

                        <Label Content="ID:" Style="{StaticResource ThemedLabelStyle}"/>
                        <TextBox Text="{Binding SelectedRole.Id, Mode=OneWay}" 
                                 IsEnabled="False"
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Наименование:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedRole.Name}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Код:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedRole.Code}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Описание:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedRole.Description}" 
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="80"
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <TextBlock Text="Права доступа к таблицам:" 
                                   FontWeight="Bold"
                                   Margin="0,10,0,5"/>

                        <!-- Права доступа к таблицам -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <CheckBox Content="Аудит логов" 
                                          IsChecked="{Binding SelectedRole.TAB_AuditLogs, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Отделы" 
                                          IsChecked="{Binding SelectedRole.TAB_Departments, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Зависимости техники" 
                                          IsChecked="{Binding SelectedRole.TAB_EquipmentDependencies, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Техника" 
                                          IsChecked="{Binding SelectedRole.TAB_Equipments, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Организации-арендодатели" 
                                          IsChecked="{Binding SelectedRole.TAB_LessorOrganizations, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Госномера" 
                                          IsChecked="{Binding SelectedRole.TAB_LicensePlates, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Роли" 
                                          IsChecked="{Binding SelectedRole.TAB_Roles, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <CheckBox Content="Заявки" 
                                          IsChecked="{Binding SelectedRole.TAB_ShiftRequests, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Транспортная программа" 
                                          IsChecked="{Binding SelectedRole.TAB_TransportProgram, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Доступ к отделам" 
                                          IsChecked="{Binding SelectedRole.TAB_UserDepartmentAccess, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Избранное" 
                                          IsChecked="{Binding SelectedRole.TAB_UserFavorites, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Пользователи" 
                                          IsChecked="{Binding SelectedRole.TAB_Users, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Доступ к складам" 
                                          IsChecked="{Binding SelectedRole.TAB_UserWarehouseAccess, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Территории складов" 
                                          IsChecked="{Binding SelectedRole.TAB_WarehouseAreas, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                                <CheckBox Content="Склады" 
                                          IsChecked="{Binding SelectedRole.TAB_Warehouses, Converter={StaticResource PermissionToBoolConverter}}"
                                          Style="{StaticResource ThemedCheckBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Специальные права:" 
                                   FontWeight="Bold"
                                   Margin="0,10,0,5"/>

                        <CheckBox Content="Экспорт данных" 
                                  IsChecked="{Binding SelectedRole.SPEC_ExportData}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"/>
                        <CheckBox Content="Просмотр отчетов" 
                                  IsChecked="{Binding SelectedRole.SPEC_ViewReports}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"/>
                        <CheckBox Content="Управление всеми отделами" 
                                  IsChecked="{Binding SelectedRole.SPEC_ManageAllDepartments}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"/>
                        <CheckBox Content="Управление пользователями" 
                                  IsChecked="{Binding SelectedRole.SPEC_ManageUsers}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"/>
                        <CheckBox Content="Системный администратор" 
                                  IsChecked="{Binding SelectedRole.SPEC_SystemAdmin}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"/>

                        <CheckBox Content="Активна" 
                                  IsChecked="{Binding SelectedRole.IsActive}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"
                                  Margin="0,10,0,0"/>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="Сохранить" 
                                    Command="{Binding SaveRoleCommand}"
                                    Style="{StaticResource ThemedButtonStyle}"
                                    Width="100"
                                    Margin="0,0,10,0"/>
                            <Button Content="Отмена" 
                                    Command="{Binding CancelEditCommand}"
                                    Style="{StaticResource ThemedButtonStyle}"
                                    Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>