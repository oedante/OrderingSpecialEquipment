<Window x:Class="OrderingSpecialEquipment.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Загрузка..." Height="150" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False">
    <Grid>

            <!-- Логотип -->
            <Image Source="/Pictures/yamal_logo.png" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="Fill" Height="83" Width="258" Margin="0,5,0,0"/>

            <!-- Название приложения -->
            <TextBlock Text="Заказ спецтехники" FontSize="28" Foreground="White" FontWeight="Bold" Margin="21,93,-21,16">
                <TextBlock.Effect>
                    <!-- Толстая обводка -->
                    <DropShadowEffect ShadowDepth="0" 
                             BlurRadius="0" 
                             Color="Black" 
                             Opacity="1"/>
                </TextBlock.Effect>
            </TextBlock>
    </Grid>
</Window>