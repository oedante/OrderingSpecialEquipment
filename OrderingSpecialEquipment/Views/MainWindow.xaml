<Window x:Class="OrderingSpecialEquipment.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2006"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:OrderingSpecialEquipment.ViewModels"
        xmlns:views="clr-namespace:OrderingSpecialEquipment.Views"
        xmlns:converters="clr-namespace:OrderingSpecialEquipment.Converters"
        xmlns:reports="clr-namespace:OrderingSpecialEquipment.Views.Reports"
        xmlns:reportsVm="clr-namespace:OrderingSpecialEquipment.ViewModels.Reports"
        mc:Ignorable="d"
        Title="Заказ специальной техники" Height="800" Width="1400"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Конвертеры -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <converters:BoolToWidthConverter x:Key="BoolToWidth"/>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo"/>
        <converters:ShiftConverter x:Key="ShiftConverter"/>
        <converters:DateTimeFormatConverter x:Key="DateTimeFormat"/>
        <converters:NumberFormatConverter x:Key="NumberFormat"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>

        <!-- DataTemplates для вкладок -->
        <DataTemplate DataType="{x:Type vm:MainViewModel}">
            <views:MainContent DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EditDepartmentsViewModel}">
            <views:EditDepartmentsView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EditEquipmentsViewModel}">
            <views:EditEquipmentsView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EditWarehousesViewModel}">
            <views:EditWarehousesView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EditAccessRightsViewModel}">
            <views:EditAccessRightsView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EditUsersViewModel}">
            <views:EditUsersView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EditRolesViewModel}">
            <views:EditRolesView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EditLessorOrganizationsViewModel}">
            <views:EditLessorOrganizationsView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EditLicensePlatesViewModel}">
            <views:EditLicensePlatesView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EditTransportProgramViewModel}">
            <views:EditTransportProgramView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EditEquipmentDependenciesViewModel}">
            <views:EditEquipmentDependenciesView DataContext="{Binding}"/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type reportsVm:ReportPreviewViewModel}">
            <reports:ReportPreviewWindow DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и меню -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackground}" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Система заказа специальной техники" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource TextForeground}"
                           VerticalAlignment="Center"/>

                <Separator Width="20"/>

                <TextBlock Text="Пользователь:" 
                           Foreground="{DynamicResource TextForeground}"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding CurrentUser.FullName}" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextForeground}"
                           Margin="5,0,0,0"
                           VerticalAlignment="Center"/>

                <Separator Width="20"/>

                <Menu Background="Transparent">
                    <MenuItem Header="Справочники" Foreground="{DynamicResource TextForeground}">
                        <MenuItem Header="Отделы" 
                                  Command="{Binding OpenEditDepartmentsCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                        <MenuItem Header="Техника" 
                                  Command="{Binding OpenEditEquipmentsCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                        <MenuItem Header="Склады и территории" 
                                  Command="{Binding OpenEditWarehousesCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                        <MenuItem Header="Организации-арендодатели" 
                                  Command="{Binding OpenEditLessorOrgsCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                        <MenuItem Header="Госномера" 
                                  Command="{Binding OpenEditLicensePlatesCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                    </MenuItem>
                    <MenuItem Header="Администрирование" Foreground="{DynamicResource TextForeground}">
                        <MenuItem Header="Права доступа" 
                                  Command="{Binding OpenEditAccessRightsCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                        <MenuItem Header="Пользователи" 
                                  Command="{Binding OpenEditUsersCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                        <MenuItem Header="Роли" 
                                  Command="{Binding OpenEditRolesCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                        <MenuItem Header="Зависимости техники" 
                                  Command="{Binding OpenEditDependenciesCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                        <MenuItem Header="Транспортная программа" 
                                  Command="{Binding OpenEditTransportProgramCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                    </MenuItem>
                    <MenuItem Header="Отчеты" Foreground="{DynamicResource TextForeground}">
                        <MenuItem Header="Предпросмотр отчетов" 
                                  Command="{Binding OpenReportsCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                        <MenuItem Header="Экспорт в Excel" 
                                  Command="{Binding ExportToExcelCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                    </MenuItem>
                    <MenuItem Header="Настройки" Foreground="{DynamicResource TextForeground}">
                        <MenuItem Header="Тема оформления" 
                                  Command="{Binding OpenThemeSettingsCommand}"
                                  Foreground="{DynamicResource TextForeground}"/>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1" 
                    ItemsSource="{Binding OpenTabs}"
                    SelectedItem="{Binding SelectedTab}"
                    Background="{DynamicResource PanelBackground}"
                    BorderBrush="{DynamicResource BorderBrush}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding TabTitle}" 
                                   Foreground="{DynamicResource TextForeground}"/>
                        <Button Content="×" 
                                Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                                CommandParameter="{Binding}"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Foreground="{DynamicResource TextForeground}"
                                Margin="5,0,0,0"
                                Width="20"
                                Height="20"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>

        <!-- Статусная панель -->
        <Border Grid.Row="2" 
                Background="{DynamicResource StatusBackground}" 
                Padding="5">
            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="{DynamicResource StatusForeground}"/>
        </Border>
    </Grid>
</Window>