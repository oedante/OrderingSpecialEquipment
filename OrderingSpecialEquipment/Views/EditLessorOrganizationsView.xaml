<UserControl x:Class="OrderingSpecialEquipment.Views.EditLessorOrganizationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2006"
             xmlns:converters="clr-namespace:OrderingSpecialEquipment.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <converters:BoolToWidthConverter x:Key="BoolToWidth"/>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PanelBackground}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                Padding="10" 
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Управление организациями-арендодателями" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource TextForeground}"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Обновить" 
                            Command="{Binding LoadOrganizationsCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Добавить" 
                            Command="{Binding AddOrganizationCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Редактировать" 
                            Command="{Binding EditOrganizationCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Удалить" 
                            Command="{Binding DeleteOrganizationCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Сохранить" 
                            Command="{Binding SaveOrganizationCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Отмена" 
                            Command="{Binding CancelEditCommand}"
                            Style="{StaticResource ThemedButtonStyle}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBox Text="{Binding SearchText}" 
                             Width="200"
                             Style="{StaticResource ThemedTextBoxStyle}"
                             Margin="0,0,5,0"/>
                    <Button Content="Поиск" 
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource ThemedButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Таблица организаций -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10">
                <DataGrid ItemsSource="{Binding Organizations}"
                          SelectedItem="{Binding SelectedOrganization}"
                          Style="{StaticResource ThemedDataGridStyle}"
                          RowStyle="{StaticResource ThemedDataGridRowStyle}"
                          CellStyle="{StaticResource ThemedDataGridCellStyle}"
                          ColumnHeaderStyle="{StaticResource ThemedDataGridColumnHeaderStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                        <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="ИНН" Binding="{Binding INN}" Width="120"/>
                        <DataGridTextColumn Header="Контактное лицо" Binding="{Binding ContactPerson}" Width="150"/>
                        <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                        <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="200"/>
                        <DataGridCheckBoxColumn Header="Активна" Binding="{Binding IsActive}" Width="80"/>
                        <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedAt}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Панель редактирования -->
            <Border Grid.Column="1" 
                    Width="350"
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Редактирование организации" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource TextForeground}"
                                   Margin="0,0,0,10"/>

                        <Label Content="ID:" Style="{StaticResource ThemedLabelStyle}"/>
                        <TextBox Text="{Binding SelectedOrganization.Id, Mode=OneWay}" 
                                 IsEnabled="False"
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Наименование:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedOrganization.Name}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="ИНН:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedOrganization.INN}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Контактное лицо:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedOrganization.ContactPerson}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Телефон:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedOrganization.Phone}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Email:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedOrganization.Email}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Адрес:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedOrganization.Address}" 
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="60"
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <CheckBox Content="Активна" 
                                  IsChecked="{Binding SelectedOrganization.IsActive}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"
                                  Margin="0,10,0,0"/>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="Сохранить" 
                                    Command="{Binding SaveOrganizationCommand}"
                                    Style="{StaticResource ThemedButtonStyle}"
                                    Width="100"
                                    Margin="0,0,10,0"/>
                            <Button Content="Отмена" 
                                    Command="{Binding CancelEditCommand}"
                                    Style="{StaticResource ThemedButtonStyle}"
                                    Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>