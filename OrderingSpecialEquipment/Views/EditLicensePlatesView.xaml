<UserControl x:Class="OrderingSpecialEquipment.Views.EditLicensePlatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OrderingSpecialEquipment.Views"
             xmlns:converters="clr-namespace:OrderingSpecialEquipment.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=local:EditLicensePlatesViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="ThemedDataGridStyle" BasedOn="{StaticResource ThemedDataGridStyle}" TargetType="DataGrid" />
        <Style x:Key="ThemedButtonStyle" BasedOn="{StaticResource ThemedButtonStyle}" TargetType="Button" />
        <Style x:Key="ThemedTextBoxStyle" BasedOn="{StaticResource ThemedTextBoxStyle}" TargetType="TextBox" />
        <Style x:Key="ThemedLabelStyle" BasedOn="{StaticResource {x:Type Label}}" TargetType="Label" />
        <Style x:Key="ThemedComboBoxStyle" BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="ComboBox" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Кнопки управления -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Панель редактирования -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Загрузить" Command="{Binding LoadLicensePlatesCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding LicensePlates}" 
                  SelectedItem="{Binding SelectedLicensePlate}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  SelectionMode="Single"
                  Style="{StaticResource ThemedDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Госномер" Binding="{Binding PlateNumber}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ID Техники" Binding="{Binding EquipmentId}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ID Организации" Binding="{Binding LessorOrganizationId}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Марка" Binding="{Binding Brand}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Год выпуска" Binding="{Binding Year}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="VIN" Binding="{Binding VIN}" IsReadOnly="True" Width="*"/>
                <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" IsReadOnly="True" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Grid.Row="2" Header="Редактирование госномера" Margin="0,10,0,0" Visibility="{Binding SelectedLicensePlate, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="ID:" Style="{StaticResource ThemedLabelStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding EditId, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ThemedTextBoxStyle}" IsEnabled="{Binding IsEditing, Converter={StaticResource BoolToVis}, ConverterParameter=inverted}"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Госномер:" Style="{StaticResource ThemedLabelStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding EditPlateNumber, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ThemedTextBoxStyle}"/>

                <Label Grid.Row="2" Grid.Column="0" Content="ID Техники:" Style="{StaticResource ThemedLabelStyle}"/>
                <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                          ItemsSource="{Binding EquipmentsForSelection}" 
                          SelectedValue="{Binding EditEquipmentId, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Id" DisplayMemberPath="Name" 
                          Style="{StaticResource ThemedComboBoxStyle}"/>

                <Label Grid.Row="3" Grid.Column="0" Content="ID Организации:" Style="{StaticResource ThemedLabelStyle}"/>
                <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" 
                          ItemsSource="{Binding LessorOrgsForSelection}" 
                          SelectedValue="{Binding EditLessorOrganizationId, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Id" DisplayMemberPath="Name" 
                          Style="{StaticResource ThemedComboBoxStyle}"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Марка:" Style="{StaticResource ThemedLabelStyle}"/>
                <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding EditBrand, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ThemedTextBoxStyle}"/>

                <Label Grid.Row="5" Grid.Column="0" Content="Год выпуска:" Style="{StaticResource ThemedLabelStyle}"/>
                <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding EditYear, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ThemedTextBoxStyle}"/>

                <Label Grid.Row="6" Grid.Column="0" Content="VIN:" Style="{StaticResource ThemedLabelStyle}"/>
                <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding EditVIN, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ThemedTextBoxStyle}"/>

                <Label Grid.Row="7" Grid.Column="0" Content="Емкость/Мощность:" Style="{StaticResource ThemedLabelStyle}"/>
                <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding EditCapacity, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ThemedTextBoxStyle}"/>

                <CheckBox Grid.Row="8" Grid.Column="0" Content="Активен" IsChecked="{Binding EditIsActive}" VerticalAlignment="Center"/>

                <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Сохранить" Command="{Binding SaveLicensePlateCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
                    <Button Content="Удалить" Command="{Binding DeleteLicensePlateCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
                    <Button Content="Отмена" Command="{Binding CancelEditCommand}" Style="{StaticResource ThemedButtonStyle}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>