<UserControl x:Class="OrderingSpecialEquipment.Views.EditEquipmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2006"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PanelBackground}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                Padding="10" 
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Управление техникой" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource TextForeground}"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Обновить" 
                            Command="{Binding LoadEquipmentsCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Добавить" 
                            Command="{Binding AddEquipmentCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Редактировать" 
                            Command="{Binding EditEquipmentCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Удалить" 
                            Command="{Binding DeleteEquipmentCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Сохранить" 
                            Command="{Binding SaveEquipmentCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Отмена" 
                            Command="{Binding CancelEditCommand}"
                            Style="{StaticResource ThemedButtonStyle}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBox Text="{Binding SearchText}" 
                             Width="200"
                             Style="{StaticResource ThemedTextBoxStyle}"
                             Margin="0,0,5,0"/>
                    <Button Content="Поиск" 
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource ThemedButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Таблица техники -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10">
                <DataGrid ItemsSource="{Binding Equipments}"
                          SelectedItem="{Binding SelectedEquipment}"
                          Style="{StaticResource ThemedDataGridStyle}"
                          RowStyle="{StaticResource ThemedDataGridRowStyle}"
                          CellStyle="{StaticResource ThemedDataGridCellStyle}"
                          ColumnHeaderStyle="{StaticResource ThemedDataGridColumnHeaderStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                        <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Можно заказать несколько" Binding="{Binding CanOrderMultiple}" Width="120"/>
                        <DataGridTextColumn Header="Стоимость часа" Binding="{Binding HourlyCost, StringFormat=C}" Width="100"/>
                        <DataGridCheckBoxColumn Header="Требует оператора" Binding="{Binding RequiresOperator}" Width="100"/>
                        <DataGridCheckBoxColumn Header="Активна" Binding="{Binding IsActive}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Панель редактирования -->
            <Border Grid.Column="1" 
                    Width="350"
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Редактирование техники" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource TextForeground}"
                                   Margin="0,0,0,10"/>

                        <Label Content="ID:" Style="{StaticResource ThemedLabelStyle}"/>
                        <TextBox Text="{Binding SelectedEquipment.Id, Mode=OneWay}" 
                                 IsEnabled="False"
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Наименование:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedEquipment.Name}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Категория:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <ComboBox ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedEquipment.Category}"
                                  Style="{StaticResource ThemedComboBoxStyle}"/>

                        <CheckBox Content="Можно заказать несколько" 
                                  IsChecked="{Binding SelectedEquipment.CanOrderMultiple}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"
                                  Margin="0,10,0,0"/>

                        <CheckBox Content="Требует оператора" 
                                  IsChecked="{Binding SelectedEquipment.RequiresOperator}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"
                                  Margin="0,5,0,0"/>

                        <CheckBox Content="Активна" 
                                  IsChecked="{Binding SelectedEquipment.IsActive}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"
                                  Margin="0,5,0,0"/>

                        <Label Content="Стоимость часа:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedEquipment.HourlyCost}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Описание:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedEquipment.Description}" 
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="80"
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="Сохранить" 
                                    Command="{Binding SaveEquipmentCommand}"
                                    Style="{StaticResource ThemedButtonStyle}"
                                    Width="100"
                                    Margin="0,0,10,0"/>
                            <Button Content="Отмена" 
                                    Command="{Binding CancelEditCommand}"
                                    Style="{StaticResource ThemedButtonStyle}"
                                    Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>