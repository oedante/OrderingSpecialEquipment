<UserControl x:Class="OrderingSpecialEquipment.Views.EditWarehousesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2006"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PanelBackground}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                Padding="10" 
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Управление складами и территориями" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource TextForeground}"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Обновить" 
                            Command="{Binding LoadWarehousesCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Добавить склад" 
                            Command="{Binding AddWarehouseCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Редактировать склад" 
                            Command="{Binding EditWarehouseCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Удалить склад" 
                            Command="{Binding DeleteWarehouseCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Сохранить склад" 
                            Command="{Binding SaveWarehouseCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Отмена" 
                            Command="{Binding CancelEditCommand}"
                            Style="{StaticResource ThemedButtonStyle}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBox Text="{Binding SearchText}" 
                             Width="200"
                             Style="{StaticResource ThemedTextBoxStyle}"
                             Margin="0,0,5,0"/>
                    <Button Content="Поиск" 
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource ThemedButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Основное содержимое: разделение на склады и территории -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель: Склады -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Склады" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextForeground}"
                               Margin="0,0,0,10"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Warehouses}"
                              SelectedItem="{Binding SelectedWarehouse}"
                              Style="{StaticResource ThemedDataGridStyle}"
                              RowStyle="{StaticResource ThemedDataGridRowStyle}"
                              CellStyle="{StaticResource ThemedDataGridCellStyle}"
                              ColumnHeaderStyle="{StaticResource ThemedDataGridColumnHeaderStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="2*"/>
                            <DataGridTextColumn Header="Отдел" Binding="{Binding Department.Name}" Width="2*"/>
                            <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="3*"/>
                            <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Правая панель: Редактирование склада -->
            <Border Grid.Column="1" 
                    Width="350"
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Редактирование склада" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource TextForeground}"
                                   Margin="0,0,0,10"/>

                        <Label Content="ID:" Style="{StaticResource ThemedLabelStyle}"/>
                        <TextBox Text="{Binding SelectedWarehouse.Id, Mode=OneWay}" 
                                 IsEnabled="False"
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Наименование:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedWarehouse.Name}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Отдел:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <ComboBox ItemsSource="{Binding Departments}"
                                  SelectedItem="{Binding SelectedWarehouse.Department}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ThemedComboBoxStyle}"/>

                        <Label Content="Адрес:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedWarehouse.Address}" 
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="60"
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <CheckBox Content="Активен" 
                                  IsChecked="{Binding SelectedWarehouse.IsActive}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"
                                  Margin="0,10,0,0"/>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="Сохранить" 
                                    Command="{Binding SaveWarehouseCommand}"
                                    Style="{StaticResource ThemedButtonStyle}"
                                    Width="100"
                                    Margin="0,0,10,0"/>
                            <Button Content="Отмена" 
                                    Command="{Binding CancelEditCommand}"
                                    Style="{StaticResource ThemedButtonStyle}"
                                    Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>