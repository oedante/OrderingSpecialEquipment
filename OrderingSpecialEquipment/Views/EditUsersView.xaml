<UserControl x:Class="OrderingSpecialEquipment.Views.EditUsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2006"
             xmlns:converters="clr-namespace:OrderingSpecialEquipment.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <converters:BoolToWidthConverter x:Key="BoolToWidth"/>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo"/>
        <converters:ShiftConverter x:Key="ShiftConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PanelBackground}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                Padding="10" 
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Управление пользователями" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource TextForeground}"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Обновить" 
                            Command="{Binding LoadUsersCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Добавить" 
                            Command="{Binding AddUserCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Редактировать" 
                            Command="{Binding EditUserCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Удалить" 
                            Command="{Binding DeleteUserCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Сохранить" 
                            Command="{Binding SaveUserCommand}"
                            Style="{StaticResource ThemedButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="Отмена" 
                            Command="{Binding CancelEditCommand}"
                            Style="{StaticResource ThemedButtonStyle}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBox Text="{Binding SearchText}" 
                             Width="200"
                             Style="{StaticResource ThemedTextBoxStyle}"
                             Margin="0,0,5,0"/>
                    <Button Content="Поиск" 
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource ThemedButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Таблица пользователей -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10">
                <DataGrid ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          Style="{StaticResource ThemedDataGridStyle}"
                          RowStyle="{StaticResource ThemedDataGridRowStyle}"
                          CellStyle="{StaticResource ThemedDataGridCellStyle}"
                          ColumnHeaderStyle="{StaticResource ThemedDataGridColumnHeaderStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                        <DataGridTextColumn Header="Логин Windows" Binding="{Binding WindowsLogin}" Width="150"/>
                        <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="200"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                        <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                        <DataGridTextColumn Header="Роль" Binding="{Binding Role.Name}" Width="150"/>
                        <DataGridTextColumn Header="Отдел по умолчанию" Binding="{Binding DefaultDepartment.Name}" Width="150"/>
                        <DataGridCheckBoxColumn Header="Все отделы" Binding="{Binding HasAllDepartments}" Width="80"/>
                        <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" Width="80"/>
                        <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedAt}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Панель редактирования -->
            <Border Grid.Column="1" 
                    Width="350"
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Редактирование пользователя" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource TextForeground}"
                                   Margin="0,0,0,10"/>

                        <Label Content="ID:" Style="{StaticResource ThemedLabelStyle}"/>
                        <TextBox Text="{Binding SelectedUser.Id, Mode=OneWay}" 
                                 IsEnabled="False"
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Логин Windows:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedUser.WindowsLogin}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="ФИО:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedUser.FullName}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Email:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedUser.Email}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Телефон:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding SelectedUser.Phone}" 
                                 Style="{StaticResource ThemedTextBoxStyle}"/>

                        <Label Content="Роль:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <ComboBox ItemsSource="{Binding Roles}"
                                  SelectedItem="{Binding SelectedUser.Role}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ThemedComboBoxStyle}"/>

                        <Label Content="Отдел по умолчанию:" Style="{StaticResource ThemedLabelStyle}" Margin="0,10,0,0"/>
                        <ComboBox ItemsSource="{Binding Departments}"
                                  SelectedItem="{Binding SelectedUser.DefaultDepartment}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ThemedComboBoxStyle}"/>

                        <CheckBox Content="Доступ ко всем отделам" 
                                  IsChecked="{Binding SelectedUser.HasAllDepartments}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"
                                  Margin="0,10,0,0"/>

                        <CheckBox Content="Активен" 
                                  IsChecked="{Binding SelectedUser.IsActive}"
                                  Style="{StaticResource ThemedCheckBoxStyle}"
                                  Margin="0,10,0,0"/>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="Сохранить" 
                                    Command="{Binding SaveUserCommand}"
                                    Style="{StaticResource ThemedButtonStyle}"
                                    Width="100"
                                    Margin="0,0,10,0"/>
                            <Button Content="Отмена" 
                                    Command="{Binding CancelEditCommand}"
                                    Style="{StaticResource ThemedButtonStyle}"
                                    Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>