<UserControl x:Class="OrderingSpecialEquipment.Views.EditUsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OrderingSpecialEquipment.Views"
             xmlns:converters="clr-namespace:OrderingSpecialEquipment.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=local:EditUsersViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="ThemedDataGridStyle" BasedOn="{StaticResource ThemedDataGridStyle}" TargetType="DataGrid" />
        <Style x:Key="ThemedButtonStyle" BasedOn="{StaticResource ThemedButtonStyle}" TargetType="Button" />
        <Style x:Key="ThemedTextBoxStyle" BasedOn="{StaticResource ThemedTextBoxStyle}" TargetType="TextBox" />
        <Style x:Key="ThemedLabelStyle" BasedOn="{StaticResource {x:Type Label}}" TargetType="Label" />
        <Style x:Key="ThemedComboBoxStyle" BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="ComboBox" />
        <Style x:Key="ThemedCheckBoxStyle" BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="CheckBox" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Кнопки управления -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Панель редактирования -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Загрузить" Command="{Binding LoadUsersCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Users}" 
                  SelectedItem="{Binding SelectedUser}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  SelectionMode="Single"
                  Style="{StaticResource ThemedDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Логин Windows" Binding="{Binding WindowsLogin}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ID Роли" Binding="{Binding RoleId}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ID Отдела по умолчанию" Binding="{Binding DefaultDepartmentId}" IsReadOnly="True" Width="*"/>
                <DataGridCheckBoxColumn Header="Доступ ко всем отделам" Binding="{Binding HasAllDepartments}" IsReadOnly="True" Width="*"/>
                <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" IsReadOnly="True" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Grid.Row="2" Header="Редактирование пользователя" Margin="0,10,0,0" Visibility="{Binding SelectedUser, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="ID:" Style="{StaticResource ThemedLabelStyle}"/>
                <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding EditId, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ThemedTextBoxStyle}" IsEnabled="{Binding IsEditing, Converter={StaticResource BoolToVis}, ConverterParameter=inverted}"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Логин Windows:" Style="{StaticResource ThemedLabelStyle}"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding EditWindowsLogin, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ThemedTextBoxStyle}"/>

                <Label Grid.Row="2" Grid.Column="0" Content="ФИО:" Style="{StaticResource ThemedLabelStyle}"/>
                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding EditFullName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ThemedTextBoxStyle}"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Email:" Style="{StaticResource ThemedLabelStyle}"/>
                <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding EditEmail, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ThemedTextBoxStyle}"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Телефон:" Style="{StaticResource ThemedLabelStyle}"/>
                <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding EditPhone, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ThemedTextBoxStyle}"/>

                <Label Grid.Row="5" Grid.Column="0" Content="ID Роли:" Style="{StaticResource ThemedLabelStyle}"/>
                <ComboBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" 
                          ItemsSource="{Binding RolesForSelection}" 
                          SelectedValue="{Binding EditRoleId, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Id" DisplayMemberPath="Name" 
                          Style="{StaticResource ThemedComboBoxStyle}"/>

                <Label Grid.Row="6" Grid.Column="0" Content="ID Отдела по умолчанию:" Style="{StaticResource ThemedLabelStyle}"/>
                <ComboBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" 
                          ItemsSource="{Binding DepartmentsForSelection}" 
                          SelectedValue="{Binding EditDefaultDepartmentId, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Id" DisplayMemberPath="Name" 
                          Style="{StaticResource ThemedComboBoxStyle}"/>

                <CheckBox Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" Content="Доступ ко всем отделам" IsChecked="{Binding EditHasAllDepartments}" Style="{StaticResource ThemedCheckBoxStyle}"/>

                <CheckBox Grid.Row="8" Grid.Column="0" Content="Активен" IsChecked="{Binding EditIsActive}" VerticalAlignment="Center"/>

                <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Сохранить" Command="{Binding SaveUserCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
                    <Button Content="Удалить" Command="{Binding DeleteUserCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
                    <Button Content="Отмена" Command="{Binding CancelEditCommand}" Style="{StaticResource ThemedButtonStyle}"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>