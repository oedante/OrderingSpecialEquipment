<UserControl x:Class="OrderingSpecialEquipment.Views.EditAccessRightsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2006"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PanelBackground}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                Padding="10" 
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Управление правами доступа пользователей" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource TextForeground}"
                           Margin="0,0,0,10"/>

                <Button Content="Обновить данные" 
                        Command="{Binding LoadDataCommand}"
                        Style="{StaticResource ThemedButtonStyle}"
                        Width="150"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое: разделение на пользователей/отделы и склады -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель: Пользователи -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Пользователи" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextForeground}"
                               Margin="0,0,0,10"/>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Users}"
                             SelectedItem="{Binding SelectedUser}"
                             SelectionChanged="UserListBox_SelectionChanged"
                             Style="{StaticResource ThemedListBoxStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding FullName}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding WindowsLogin}" FontSize="10" Opacity="0.7"/>
                                    <TextBlock Text="{Binding Role.Name}" FontSize="10" FontStyle="Italic" Opacity="0.8"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Средняя панель: Отделы -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Отделы" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextForeground}"
                               Margin="0,0,0,10"/>

                    <CheckBox Grid.Row="1"
                              Content="Доступ ко всем отделам"
                              IsChecked="{Binding UserHasAllDepartments}"
                              IsEnabled="{Binding SelectedUser, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"
                              Command="{Binding ToggleUserAllDepartmentsCommand}"
                              Style="{StaticResource ThemedCheckBoxStyle}"
                              Margin="0,0,0,10"/>

                    <ListBox Grid.Row="2"
                             ItemsSource="{Binding Departments}"
                             SelectedItem="{Binding SelectedDepartment}"
                             SelectionChanged="DepartmentListBox_SelectionChanged"
                             Style="{StaticResource ThemedListBoxStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                              IsEnabled="False"
                                              Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource ThemedListBoxItemStyle}">
                                <Setter Property="IsSelected" Value="{Binding IsAccessGranted, Mode=OneWay}"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Правая панель: Склады и управление доступом -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource PanelBackground}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Склады отдела" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextForeground}"
                               Margin="0,0,0,10"/>

                    <CheckBox Grid.Row="1"
                              Content="Доступ ко всем складам отдела"
                              IsChecked="{Binding DeptHasAllWarehouses}"
                              IsEnabled="{Binding SelectedDepartment, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"
                              Command="{Binding ToggleDeptAllWarehousesCommand}"
                              Style="{StaticResource ThemedCheckBoxStyle}"
                              Margin="0,0,0,10"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <!-- Список складов -->
                        <ListBox Grid.Column="0"
                                 ItemsSource="{Binding Warehouses}"
                                 SelectedItem="{Binding SelectedWarehouse}"
                                 Style="{StaticResource ThemedListBoxStyle}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Address}" FontSize="10" Opacity="0.7"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Кнопки управления -->
                        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,10,0">
                            <Button Content="→ Добавить доступ" 
                                    Command="{Binding AddWarehouseAccessCommand}"
                                    CommandParameter="{Binding SelectedWarehouse}"
                                    Style="{StaticResource ThemedButtonStyle}"
                                    Margin="0,0,0,5"
                                    Width="120"/>
                            <Button Content="← Удалить доступ" 
                                    Command="{Binding RemoveWarehouseAccessCommand}"
                                    CommandParameter="{Binding SelectedWarehouse}"
                                    Style="{StaticResource ThemedButtonStyle}"
                                    Width="120"/>
                        </StackPanel>

                        <!-- Инструкции и статус -->
                        <Border Grid.Column="2" 
                                Background="{DynamicResource ListItemBackground}"
                                Padding="10"
                                Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Инструкция:" 
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource TextForeground}"
                                           Margin="0,0,0,10"/>

                                <TextBlock TextWrapping="Wrap"
                                           Foreground="{DynamicResource TextForeground}">
                                    <Run Text="1. Выберите пользователя слева"/>
                                    <LineBreak/>
                                    <Run Text="2. Выберите отдел в центре"/>
                                    <LineBreak/>
                                    <Run Text="3. Отметьте 'Доступ ко всем складам' или"/>
                                    <LineBreak/>
                                    <Run Text="   выберите склады справа и нажмите 'Добавить доступ'"/>
                                    <LineBreak/>
                                    <LineBreak/>
                                    <Run Text="Статус:" FontWeight="Bold"/>
                                    <LineBreak/>
                                    <Run Text="Пользователь:"/> <Run Text="{Binding SelectedUser?.FullName, FallbackValue=Не выбран}"/>
                                    <LineBreak/>
                                    <Run Text="Отдел:"/> <Run Text="{Binding SelectedDepartment?.Name, FallbackValue=Не выбран}"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>