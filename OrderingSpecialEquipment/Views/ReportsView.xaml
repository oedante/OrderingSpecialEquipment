<UserControl x:Class="OrderingSpecialEquipment.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OrderingSpecialEquipment.Views"
             xmlns:converters="clr-namespace:OrderingSpecialEquipment.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=local:ReportsViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <converters:Converters.BoolToYesNoConverter x:Key="BoolToYesNo"/>
        <converters:Converters.BoolToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="ThemedDataGridStyle" BasedOn="{StaticResource ThemedDataGridStyle}" TargetType="DataGrid" />
        <Style x:Key="ThemedButtonStyle" BasedOn="{StaticResource ThemedButtonStyle}" TargetType="Button" />
        <Style x:Key="ThemedTextBoxStyle" BasedOn="{StaticResource ThemedTextBoxStyle}" TargetType="TextBox" />
        <Style x:Key="ThemedLabelStyle" BasedOn="{StaticResource {x:Type Label}}" TargetType="Label" />
        <Style x:Key="ThemedDatePickerStyle" BasedOn="{StaticResource {x:Type DatePicker}}" TargetType="DatePicker" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Панель фильтрации -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки управления -->
            <RowDefinition Height="*"/>
            <!-- DataGrid отчета -->
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Фильтры">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="От:" Style="{StaticResource ThemedLabelStyle}"/>
                <DatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding ReportStartDate}" Style="{StaticResource ThemedDatePickerStyle}" Margin="0,0,10,0"/>

                <Label Grid.Row="0" Grid.Column="2" Content="До:" Style="{StaticResource ThemedLabelStyle}"/>
                <DatePicker Grid.Row="0" Grid.Column="3" SelectedDate="{Binding ReportEndDate}" Style="{StaticResource ThemedDatePickerStyle}" Margin="0,0,10,0"/>

            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,10">
            <Button Content="Сформировать отчет" Command="{Binding GenerateReportCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
            <Button Content="Экспорт в Excel" Command="{Binding ExportToExcelCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0" IsEnabled="{Binding ReportData.Count, Converter={StaticResource BoolToVis}}"/>
        </StackPanel>

        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding ReportData}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  SelectionMode="Single"
                  Style="{StaticResource ThemedDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ключ" Binding="{Binding Key}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat='dd.MM.yyyy'}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Смена" Binding="{Binding Shift}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ID Техники" Binding="{Binding EquipmentId}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ID Госномера" Binding="{Binding LicensePlateId}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ID Склада" Binding="{Binding WarehouseId}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ID Территории" Binding="{Binding AreaId}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Номер техники" Binding="{Binding VehicleNumber}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Марка техники" Binding="{Binding VehicleBrand}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ID Арендодателя" Binding="{Binding LessorOrganizationId}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Запрошено" Binding="{Binding RequestedCount}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Отработано часов" Binding="{Binding WorkedHours}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Факт. стоимость" Binding="{Binding ActualCost, StringFormat=C}" IsReadOnly="True" Width="*"/>
                <DataGridCheckBoxColumn Header="Выполнено" Binding="{Binding IsWorked}" IsReadOnly="True" Width="*"/>
                <DataGridCheckBoxColumn Header="Заблокировано" Binding="{Binding IsBlocked}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ID Создавшего" Binding="{Binding CreatedByUserId}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedAt, StringFormat='dd.MM.yyyy HH:mm:ss'}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ID Отдела" Binding="{Binding DepartmentId}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Год Программы" Binding="{Binding ProgramYear}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Месяц Программы" Binding="{Binding ProgramMonth}" IsReadOnly="True" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>