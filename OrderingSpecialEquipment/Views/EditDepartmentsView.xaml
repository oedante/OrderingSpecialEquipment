<UserControl x:Class="OrderingSpecialEquipment.Views.EditDepartmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2006"
             xmlns:converters="clr-namespace:OrderingSpecialEquipment.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и панель управления -->
        <Border Style="{StaticResource CardStyle}" 
                Margin="0,0,0,16"
                Padding="24">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xE943;" 
                             FontFamily="Segoe MDL2 Assets"
                             FontSize="24"
                             Foreground="{StaticResource AccentColor}"
                             Margin="0,0,16,0"/>
                    <TextBlock Text="Управление отделами" 
                             Style="{StaticResource SectionHeaderStyle}"
                             Margin="0,0,0,4"/>
                </StackPanel>
                <TextBlock Text="Добавляйте, редактируйте и удаляйте отделы организации" 
                         FontSize="14"
                         Foreground="{StaticResource SecondaryTextColor}"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0"/>
            </Grid.ColumnDefinitions>

            <!-- Таблица отделов -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель поиска и управления -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource HoverBackground}"
                            CornerRadius="6"
                            Padding="16"
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Width="300"
                                         Margin="0,0,16,0"
                                         Padding="12,10"
                                         FontSize="14">
                                    <TextBox.Text>
                                        <Binding Path="SearchText" UpdateSourceTrigger="PropertyChanged">
                                            <Binding.ValidationRules>
                                                <ExceptionValidationRule/>
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                    <TextBox.LeftContent>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE721;" 
                                                 Foreground="{StaticResource SecondaryTextColor}"
                                                 Margin="0,0,8,0"/>
                                    </TextBox.LeftContent>
                                </TextBox>

                                <Button Content="Поиск" 
                                        Command="{Binding SearchCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Padding="24,10"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding RefreshCommand}"
                                        ToolTip="Обновить список"
                                        Style="{StaticResource IconButtonStyle}"
                                        Margin="0,0,8,0">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72C;" FontSize="16"/>
                                </Button>
                                <Button Command="{Binding AddCommand}"
                                        ToolTip="Добавить отдел"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Padding="16,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" 
                                                 FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="Добавить"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Таблица -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Departments}"
                              SelectedItem="{Binding SelectedDepartment}"
                              Style="{StaticResource ModernDataGridStyle}"
                              RowStyle="{StaticResource ModernDataGridRowStyle}"
                              CellStyle="{StaticResource ModernDataGridCellStyle}"
                              ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeaderStyle}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Наименование" 
                                              Binding="{Binding Name}" 
                                              Width="*"/>
                            <DataGridCheckBoxColumn Header="Активен" 
                                                  Binding="{Binding IsActive}" 
                                                  Width="80"/>
                            <DataGridTextColumn Header="Дата создания" 
                                              Binding="{Binding CreatedAt, StringFormat=d}" 
                                              Width="120"/>
                            <DataGridTemplateColumn Header="Действия" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    ToolTip="Редактировать">
                                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE70F;" FontSize="14"/>
                                            </Button>
                                            <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource IconButtonStyle}"
                                                    ToolTip="Удалить">
                                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" FontSize="14" Foreground="{StaticResource DangerColor}"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Панель редактирования с анимацией -->
            <Grid Grid.Column="1" 
                  Width="450"
                  Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <TranslateTransform x:Name="EditPanelTransform" X="450"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.X"
                                                           To="0" 
                                                           Duration="0:0:0.35"
                                                           EasingFunction="{StaticResource CubicEaseOut}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.X"
                                                           To="450" 
                                                           Duration="0:0:0.3"
                                                           EasingFunction="{StaticResource CubicEaseIn}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Border Style="{StaticResource CardStyle}" 
                        Margin="16,0,0,0"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource AccentColor}"
                                CornerRadius="8,8,0,0"
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="{Binding EditTitle}" 
                                         FontSize="18"
                                         FontWeight="SemiBold"
                                         Foreground="White"/>
                                <TextBlock Text="Заполните все обязательные поля" 
                                         FontSize="12"
                                         Foreground="#E0E0E0"
                                         Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Форма редактирования -->
                        <ScrollViewer Grid.Row="1" Padding="24">
                            <StackPanel>
                                <TextBlock Text="Наименование отдела *" 
                                         Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding SelectedDepartment.Name, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         FontSize="14"/>

                                <CheckBox Content="Активен" 
                                        IsChecked="{Binding SelectedDepartment.IsActive}"
                                        Margin="0,16,0,0"
                                        FontSize="14"/>

                                <TextBlock Text="* Обязательные поля" 
                                         FontSize="11"
                                         Foreground="{StaticResource SecondaryTextColor}"
                                         FontStyle="Italic"
                                         Margin="0,24,0,0"/>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Кнопки действий -->
                        <Border Grid.Row="2" 
                                Background="{StaticResource HoverBackground}"
                                CornerRadius="0,0,8,8"
                                Padding="20"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Отмена" 
                                        Command="{Binding CancelCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Background="{StaticResource SecondaryBackground}"
                                        Foreground="{StaticResource TextColor}"
                                        BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="1.5"
                                        Padding="24,10"
                                        Margin="0,0,12,0"/>
                                <Button Content="Сохранить" 
                                        Command="{Binding SaveCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Padding="24,10"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>