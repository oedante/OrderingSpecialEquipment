<UserControl x:Class="OrderingSpecialEquipment.Views.EditUserAccessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OrderingSpecialEquipment.Views"
             xmlns:converters="clr-namespace:OrderingSpecialEquipment.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance Type=local:EditUserAccessViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="ThemedDataGridStyle" BasedOn="{StaticResource ThemedDataGridStyle}" TargetType="DataGrid" />
        <Style x:Key="ThemedButtonStyle" BasedOn="{StaticResource ThemedButtonStyle}" TargetType="Button" />
        <Style x:Key="ThemedTextBoxStyle" BasedOn="{StaticResource ThemedTextBoxStyle}" TargetType="TextBox" />
        <Style x:Key="ThemedLabelStyle" BasedOn="{StaticResource {x:Type Label}}" TargetType="Label" />
        <Style x:Key="ThemedComboBoxStyle" BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="ComboBox" />
        <Style x:Key="ThemedCheckBoxStyle" BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="CheckBox" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Кнопки управления пользователями -->
            <RowDefinition Height="*"/>
            <!-- DataGrid пользователей -->
            <RowDefinition Height="Auto"/>
            <!-- Панель управления доступом к отделам -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid доступа к отделам -->
            <RowDefinition Height="Auto"/>
            <!-- Панель управления доступом к складам -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid доступа к складам -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Загрузить пользователей" Command="{Binding LoadUsersCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding AllUsers}" 
                  SelectedItem="{Binding SelectedUser}" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  SelectionMode="Single"
                  Style="{StaticResource ThemedDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Логин Windows" Binding="{Binding WindowsLogin}" IsReadOnly="True" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Grid.Row="2" Header="Доступ к отделам" Margin="0,10,0,10" Visibility="{Binding SelectedUser, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DataGrid Grid.Row="0" Grid.Column="0" 
                          ItemsSource="{Binding UserDepartmentAccesses}" 
                          SelectedItem="{Binding SelectedUserDeptAccess}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          SelectionMode="Single"
                          Style="{StaticResource ThemedDataGridStyle}" Margin="0,0,5,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Отдела" Binding="{Binding DepartmentId}" IsReadOnly="True" Width="*"/>
                        <DataGridCheckBoxColumn Header="Все склады" Binding="{Binding HasAllWarehouses}" IsReadOnly="False" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button Content="Добавить доступ к отделу" Command="{Binding AddDepartmentAccessCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
                    <Button Content="Удалить доступ к отделу" Command="{Binding RemoveDepartmentAccessCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
                    <Button Content="Переключить все склады" Command="{Binding ToggleAllWarehousesCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
                </StackPanel>

                <DataGrid Grid.Row="0" Grid.Column="2" 
                          ItemsSource="{Binding UserAllowedWarehouses}" 
                          SelectedItem="{Binding SelectedAllowedWarehouse}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          SelectionMode="Single"
                          Style="{StaticResource ThemedDataGridStyle}" Margin="5,0,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Склада" Binding="{Binding Id}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" IsReadOnly="True" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button Content="Удалить доступ к складу" Command="{Binding RemoveWarehouseAccessCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="4" Header="Доступ к складам (для выбранного доступа к отделу)" Margin="0,10,0,0" Visibility="{Binding SelectedUserDeptAccess, Converter={StaticResource BoolToVis}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DataGrid Grid.Row="0" Grid.Column="0" 
                          ItemsSource="{Binding AvailableWarehousesForSelection}" 
                          SelectedItem="{Binding SelectedAvailableWarehouse}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          SelectionMode="Single"
                          Style="{StaticResource ThemedDataGridStyle}" Margin="0,0,5,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Склада" Binding="{Binding Id}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" IsReadOnly="True" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button Content="Добавить доступ к складу" Command="{Binding AddWarehouseAccessCommand}" Style="{StaticResource ThemedButtonStyle}" Margin="0,0,5,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>